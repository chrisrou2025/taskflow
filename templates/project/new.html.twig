{% extends 'base.html.twig' %}

{% block title %}Nouveau projet - TaskFlow
{% endblock %}

{% block body %}
	<div
		class="container">
		<!-- Header avec breadcrumb -->
		<nav aria-label="breadcrumb" class="mb-4">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="{{ path('project_index') }}" class="text-decoration-none">
						<i class="fas fa-folder me-1"></i>Mes Projets
					</a>
				</li>
				<li class="breadcrumb-item active">Nouveau projet</li>
			</ol>
		</nav>

		<div class="row justify-content-center">
			<div class="col-md-8 col-lg-6">
				<div class="card border-0 shadow-sm">
					<div class="card-header bg-primary text-white">
						<h4 class="card-title mb-0">
							<i class="fas fa-plus me-2"></i>Créer un nouveau projet
						</h4>
					</div>
					<div class="card-body p-4">
						<p class="text-muted mb-4">
							Remplissez les informations ci-dessous pour créer votre nouveau projet. 
							                        Vous pourrez ensuite y ajouter des tâches et suivre votre progression.
						</p>

						{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

						<div class="mb-4">
							{{ form_label(form.title, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
							<div class="input-group">
								<span class="input-group-text bg-light">
									<i class="fas fa-folder text-primary"></i>
								</span>
								{{ form_widget(form.title, {'attr': {'class': 'form-control form-control-lg'}}) }}
							</div>
							{{ form_errors(form.title) }}
							{% if form.title.vars.help %}
								<div class="form-text">{{ form.title.vars.help }}</div>
							{% endif %}
						</div>

						<div class="mb-4">
							{{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
							<div class="input-group">
								<span class="input-group-text bg-light align-items-start pt-3">
									<i class="fas fa-align-left text-warning"></i>
								</span>
								{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
							</div>
							{{ form_errors(form.description) }}
							{% if form.description.vars.help %}
								<div class="form-text">{{ form.description.vars.help }}</div>
							{% endif %}
						</div>

						<div class="d-flex justify-content-between">
							<a href="{{ path('project_show', {id: project.id}) }}" class="btn btn-outline-secondary">
								<i class="fas fa-times me-2"></i>Annuler
							</a>
							<button type="submit" class="btn btn-warning btn-lg">
								<i class="fas fa-save me-2"></i>Enregistrer les modifications
							</button>
						</div>

						{{ form_end(form) }}
					</div>
				</div>

				<!-- Informations sur le projet -->
				<div class="card border-0 bg-light mt-4">
					<div class="card-body">
						<h6 class="card-title">
							<i class="fas fa-info-circle text-info me-2"></i>Informations sur le projet
						</h6>
						<div class="row text-center">
							<div class="col-3">
								<strong class="d-block">{{ project.tasksCount }}</strong>
								<small class="text-muted">Tâches</small>
							</div>
							<div class="col-3">
								<strong class="d-block text-success">{{ project.completedTasksCount }}</strong>
								<small class="text-muted">Terminées</small>
							</div>
							<div class="col-3">
								<strong class="d-block text-warning">{{ project.inProgressTasksCount }}</strong>
								<small class="text-muted">En cours</small>
							</div>
							<div class="col-3">
								<strong class="d-block text-info">{{ project.progressPercentage }}%</strong>
								<small class="text-muted">Progression</small>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<style>
		.input-group-text {
			border-right: none;
			background-color: #f8f9fa !important;
		}

		.input-group .form-control {
			border-left: none;
		}

		.input-group .form-control:focus {
			border-color: #86b7fe;
			box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
		}
	</style>
{% endblock %}
