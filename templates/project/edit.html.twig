{% extends 'base.html.twig' %}

{% block title %}Modifier
	{{ project.title }}
	- TaskFlow
{% endblock %}

{% block body %}
	<div
		class="container">
		<nav aria-label="breadcrumb" class="mb-4">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="{{ path('project_index') }}" class="text-decoration-none">
						<i class="fas fa-folder me-1"></i>Mes Projets
					</a>
				</li>
				<li class="breadcrumb-item">
					<a href="{{ path('project_show', {id: project.id}) }}" class="text-decoration-none">
						{{ project.title }}
					</a>
				</li>
				<li class="breadcrumb-item active">Modifier</li>
			</ol>
		</nav>

		<div class="row justify-content-center">
			<div class="col-md-8 col-lg-6">
				<div class="card border-0 shadow-sm">
					<div class="card-header bg-warning text-dark">
						<h4 class="card-title mb-0">
							<i class="fas fa-edit me-2"></i>Modifier le projet
						</h4>
					</div>
					<div class="card-body p-4">
						<p class="text-muted mb-4">
							Modifiez les informations de votre projet.
							Les changements seront appliqués immédiatement.
						</p>

						{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

						<div class="mb-4">
							{{ form_label(form.title, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
							<div class="input-group">
								<span class="input-group-text bg-light">
									<i class="fas fa-folder text-warning"></i>
								</span>
								{{ form_widget(form.title, {'attr': {'class': 'form-control form-control-lg'}}) }}
							</div>
							{{ form_errors(form.title) }}
						</div>

						<div class="mb-4">
							{{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
							<div class="input-group">
								<span class="input-group-text bg-light align-items-start pt-3">
									<i class="fas fa-align-left text-warning"></i>
								</span>
								{{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
							</div>
							{{ form_errors(form.description) }}
						</div>

						<div class="d-grid gap-2 d-md-flex justify-content-md-between">
							<a href="{{ path('project_show', {id: project.id}) }}" class="btn btn-outline-secondary order-md-1">
								<i class="fas fa-times me-2"></i>Annuler
							</a>
							<button type="submit" class="btn btn-warning btn-lg order-md-2">
								<i class="fas fa-save me-2"></i>Enregistrer les modifications
							</button>
						</div>

						{{ form_end(form) }}
					</div>
				</div>

				<div class="card border-0 bg-light mt-4">
					<div class="card-body">
						<h6 class="card-title">
							<i class="fas fa-info-circle text-info me-2"></i>Informations sur le projet
						</h6>
						<div class="row text-center">
							<div class="col-3">
								<strong class="d-block">{{ project.tasksCount }}</strong>
								<small class="text-muted">Tâches</small>
							</div>
							<div class="col-3">
								<strong class="d-block text-success">{{ project.completedTasksCount }}</strong>
								<small class="text-muted">Terminées</small>
							</div>
							<div class="col-3">
								<strong class="d-block text-warning">{{ project.inProgressTasksCount }}</strong>
								<small class="text-muted">En cours</small>
							</div>
							<div class="col-3">
								<strong class="d-block text-info">{{ project.progressPercentage }}%</strong>
								<small class="text-muted">Progression</small>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}