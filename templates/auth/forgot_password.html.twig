{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - TaskFlow{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-4">
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="fas fa-key text-warning fa-3x"></i>
                        </div>
                        <h2 class="h3 mb-2">Mot de passe oublié ?</h2>
                        <p class="text-muted">Saisissez votre email pour recevoir un lien de réinitialisation</p>
                    </div>

                    <!-- Formulaire -->
                    <form method="post">
                        <div class="mb-4">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope me-1"></i> Adresse email
                            </label>
                            <input type="email" 
                                   name="email" 
                                   id="email" 
                                   class="form-control form-control-lg" 
                                   placeholder="votre.email@exemple.com"
                                   required>
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i>
                                Nous vous enverrons un lien sécurisé pour réinitialiser votre mot de passe
                            </div>
                        </div>

                        <button class="btn btn-warning btn-lg w-100 mb-3" type="submit">
                            <i class="fas fa-paper-plane me-2"></i>
                            Envoyer le lien de réinitialisation
                        </button>
                    </form>

                    <!-- Liens utiles -->
                    <div class="text-center">
                        <hr class="my-4">
                        <p class="mb-2 text-muted">
                            <a href="{{ path('app_login') }}" class="text-primary text-decoration-none fw-semibold">
                                <i class="fas fa-arrow-left me-1"></i>
                                Retour à la connexion
                            </a>
                        </p>
                        <small class="text-muted">
                            Pas encore de compte ? 
                            <a href="{{ path('app_register') }}" class="text-primary text-decoration-none">
                                Créer un compte
                            </a>
                        </small>
                    </div>

                    <!-- Section sécurité -->
                    <div class="alert alert-info mt-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-shield-alt me-3 fa-2x"></i>
                            <div>
                                <strong>Sécurité garantie</strong>
                                <p class="mb-0 small">Le lien de réinitialisation expirera dans 1 heure pour votre sécurité.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section confidentialité -->
            <div class="text-center mt-4">
                <div class="row text-center">
                    <div class="col-4">
                        <i class="fas fa-shield-alt text-success fa-2x mb-2"></i>
                        <p class="small mb-0 text-white">Sécurisé</p>
                    </div>
                    <div class="col-4">
                        <i class="fas fa-user-shield text-primary fa-2x mb-2"></i>
                        <p class="small mb-0 text-white">RGPD</p>
                    </div>
                    <div class="col-4">
                        <i class="fas fa-eye-slash text-info fa-2x mb-2"></i>
                        <p class="small mb-0 text-white">Privé</p>
                    </div>
                </div>
                <p class="small text-white-50 mt-2">
                    Vos données sont protégées selon nos 
                    <a href="{{ path('legal_privacy') }}" class="text-white text-decoration-none" target="_blank">
                        politiques de confidentialité
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

{% endblock %}