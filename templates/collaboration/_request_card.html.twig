{# templates/collaboration/_request_card.html.twig #}
<div class="request-card request-status-{{ request.status }}">
    <div class="request-card-body">
        <div class="row align-items-start">
            <div class="col-12 col-md-8 mb-3 mb-md-0">
                <div class="d-flex align-items-start">
                    <!-- Icône du statut -->
                    <div class="flex-shrink-0 me-3">
                        <div class="rounded-circle bg-{{ request.statusBadgeClass|replace({'bg-': ''}) }} bg-opacity-10 d-flex align-items-center justify-content-center" 
                             style="width: 48px; height: 48px;">
                            <i class="{{ request.statusIcon }} text-{{ request.statusBadgeClass|replace({'bg-': ''}) }} fa-lg"></i>
                        </div>
                    </div>
                    
                    <div class="flex-grow-1">
                        <!-- Titre du projet -->
                        <h5 class="card-title mb-2 h6 h5-md">
                            <a href="{{ path('project_show', {id: request.project.id}) }}" 
                               class="text-decoration-none text-primary fw-bold">
                                {{ request.project.title }}
                            </a>
                        </h5>
                        
                        <!-- Informations sur les personnes -->
                        <div class="mb-2">
                            {% if perspective == 'recipient' %}
                                <span class="text-muted small">Invitation de</span>
                                <div class="d-flex align-items-center mt-1">
                                    <div class="user-avatar user-avatar-small sender me-2">
                                        {{ request.sender.firstName|first }}{{ request.sender.lastName|first }}
                                    </div>
                                    <span class="fw-medium">{{ request.sender.fullName }}</span>
                                </div>
                            {% else %}
                                <span class="text-muted small">Invitation envoyée à </span>
                                <div class="d-flex align-items-center mt-1">
                                    <div class="user-avatar user-avatar-small recipient me-2">
                                        {{ request.invitedUser.firstName|first }}{{ request.invitedUser.lastName|first }}
                                    </div>
                                    <span class="fw-medium">{{ request.invitedUser.fullName }}</span>
                                </div>
                            {% endif %}
                        </div>
                        
                        <!-- Message d'aperçu s'il existe -->
                        {% if request.message %}
                            <div class="invitation-message mb-2">
                                <small class="invitation-message-content">
                                    "{{ request.message|length > 80 ? request.message|slice(0, 80) ~ '...' : request.message }}"
                                </small>
                            </div>
                        {% endif %}
                        
                        <!-- Date et temps écoulé -->
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>
                            <span class="d-inline d-sm-none">{{ request.createdAt|date('d/m/Y') }}</span>
                            <span class="d-none d-sm-inline">{{ request.createdAt|date('d/m/Y à H:i') }}</span>
                            <span class="text-secondary ms-1">({{ request.timeAgo }})</span>
                        </small>
                    </div>
                </div>
            </div>
            
            <!-- Badge de statut et actions -->
            <div class="col-12 col-md-4">
                <div class="d-flex d-md-block align-items-center justify-content-between">
                    <!-- Badge de statut -->
                    <div class="text-center mb-0 mb-md-3">
                        <span class="status-badge {{ request.status }}">
                            <i class="{{ request.statusIcon }} me-1"></i>
                            {{ request.statusLabel }}
                        </span>
                    </div>
                    
                    <!-- Actions principales -->
                    <div class="d-flex gap-1 justify-content-center align-items-center">
                        {% if perspective == 'recipient' and request.isPending %}
                            <!-- Actions pour le destinataire -->
                            <form method="post" action="{{ path('collaboration_request_refuse', {id: request.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('refuse-request-' ~ request.id) }}">
                                <button class="task-action-btn delete btn btn-sm" 
                                        onclick="return confirm('Êtes-vous sûr de vouloir refuser cette invitation ?')"
                                        title="Refuser l'invitation">
                                    <i class="fas fa-times"></i>
                                    <span class="d-none d-sm-inline ms-1">Refuser</span>
                                </button>
                            </form>
                            <form method="post" action="{{ path('collaboration_request_accept', {id: request.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('accept-request-' ~ request.id) }}">
                                <button class="btn btn-success btn-sm" title="Accepter l'invitation">
                                    <i class="fas fa-check"></i>
                                    <span class="d-none d-sm-inline ms-1">Accepter</span>
                                </button>
                            </form>
                        {% endif %}

                        {% if perspective == 'sender' and request.isPending %}
                            <!-- Actions pour l'expéditeur -->
                            <form method="post" action="{{ path('collaboration_request_cancel', {id: request.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('cancel-request-' ~ request.id) }}">
                                <button class="task-action-btn edit btn btn-sm" 
                                        onclick="return confirm('Êtes-vous sûr de vouloir annuler cette demande ?')"
                                        title="Annuler la demande">
                                    <i class="fas fa-ban"></i>
                                    <span class="d-none d-sm-inline ms-1">Annuler</span>
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>