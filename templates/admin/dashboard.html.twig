{% extends 'base.html.twig' %}

{% block title %}Administration - TaskFlow{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2">üîß Administration TaskFlow</h1>
                    <p class="text-muted mb-0">Tableau de bord administrateur</p>
                </div>
                {# Les boutons ont √©t√© supprim√©s ici #}
            </div>
        </div>
    </div>

    {# AM√âLIORATION RESPONSIVE : Les cartes s'empilent sur les tr√®s petits √©crans #}
    <div class="row mb-4">
        <div class="col-12 col-sm-6 col-lg-3 mb-3">
            <div class="card border-0 bg-gradient-primary text-white h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                    <div class="text-white">
                        <h5 class="card-title text-uppercase fw-bold opacity-75">Utilisateurs</h5>
                        <h2 class="display-5 fw-bold mb-0">{{ total_users }}</h2>
                    </div>
                </div>
                <div class="card-footer bg-white text-primary">
                    <a href="{{ path('admin_users') }}" class="text-decoration-none">
                        <small>Voir les utilisateurs <i class="fas fa-arrow-right ms-2"></i></small>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3 mb-3">
            <div class="card border-0 bg-gradient-success text-white h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <div class="mb-3">
                        <i class="fas fa-project-diagram fa-3x opacity-50"></i>
                    </div>
                    <div class="text-white">
                        <h5 class="card-title text-uppercase fw-bold opacity-75">Projets</h5>
                        <h2 class="display-5 fw-bold mb-0">{{ total_projects }}</h2>
                    </div>
                </div>
                <div class="card-footer bg-white text-success">
                    <a href="{{ path('admin_projects') }}" class="text-decoration-none">
                        <small>Voir les projets <i class="fas fa-arrow-right ms-2"></i></small>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3 mb-3">
            <div class="card border-0 bg-gradient-warning text-white h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <div class="mb-3">
                        <i class="fas fa-tasks fa-3x opacity-50"></i>
                    </div>
                    <div class="text-white">
                        <h5 class="card-title text-uppercase fw-bold opacity-75">T√¢ches</h5>
                        <h2 class="display-5 fw-bold mb-0">{{ total_tasks }}</h2>
                    </div>
                </div>
                <div class="card-footer bg-white text-warning">
                    <a href="{{ path('admin_tasks') }}" class="text-decoration-none">
                        <small>Voir les t√¢ches <i class="fas fa-arrow-right ms-2"></i></small>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3 mb-3">
            <div class="card border-0 bg-gradient-info text-white h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <div class="mb-3">
                        <i class="fas fa-check-circle fa-3x opacity-50"></i>
                    </div>
                    <div class="text-white">
                        <h5 class="card-title text-uppercase fw-bold opacity-75">T√¢ches termin√©es</h5>
                        <h2 class="display-5 fw-bold mb-0">{{ completed_tasks_count }}</h2>
                    </div>
                </div>
                <div class="card-footer bg-white text-info">
                    <a href="{{ path('admin_tasks') }}" class="text-decoration-none">
                        <small>Voir les t√¢ches termin√©es <i class="fas fa-arrow-right ms-2"></i></small>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title fw-bold mb-0">Activit√© des 30 derniers jours</h5>
                </div>
                <div class="card-body">
                    <canvas id="monthlyActivityChart" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title fw-bold mb-0">Utilisateurs les plus actifs</h5>
                </div>
                <div class="card-body p-0">
                    {% if most_active_users is empty %}
                        <div class="p-4 text-center text-muted">Aucun utilisateur actif √† afficher.</div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th class="text-center">Projets</th>
                                        <th class="text-center">T√¢ches</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for activeUser in most_active_users %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('admin_user_show', {id: activeUser[0].id}) }}" class="d-flex align-items-center text-decoration-none">
                                                <div>
                                                    <strong class="d-block">{{ activeUser[0].fullName }}</strong>
                                                    <small class="text-muted">{{ activeUser[0].email }}</small>
                                                </div>
                                            </a>
                                        </td>
                                        <td class="text-center"><span class="badge bg-primary">{{ activeUser.projectCount }}</span></td>
                                        <td class="text-center"><span class="badge bg-success">{{ activeUser.taskCount }}</span></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title fw-bold mb-0">Projets les plus r√©cents</h5>
                </div>
                <div class="card-body">
                    {% if recent_projects is empty %}
                        <div class="p-4 text-center text-muted">Aucun projet r√©cent √† afficher.</div>
                    {% else %}
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                            {% for project in recent_projects %}
                                <div class="col">
                                    <div class="card h-100 shadow-sm border-0">
                                        <div class="card-body">
                                            <h5 class="card-title fw-bold">
                                                <a href="{{ path('project_show', {id: project.id}) }}" class="text-decoration-none text-dark">{{ project.title }}</a>
                                            </h5>
                                            <h6 class="card-subtitle mb-2 text-muted">
                                                <small>Par : <a href="{{ path('admin_user_show', {id: project.owner.id}) }}" class="text-decoration-none">{{ project.owner.fullName }}</a></small>
                                            </h6>
                                            <p class="card-text project-description">{{ project.description }}</p>
                                        </div>
                                        <div class="card-footer bg-white border-top d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="far fa-calendar me-1"></i>Cr√©√© le {{ project.createdAt|date('d/m/Y') }}
                                            </small>
                                            <span class="badge bg-primary">{{ project.tasks|length }} t√¢ches</span>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const labels = {{ monthly_activity.labels|json_encode()|raw }};
        const projectsData = {{ monthly_activity.projects|json_encode()|raw }};
        const usersData = {{ monthly_activity.users|json_encode()|raw }};
        const tasksData = {{ monthly_activity.tasks|json_encode()|raw }};

        const ctx = document.getElementById('monthlyActivityChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Projets',
                        data: projectsData,
                        borderColor: '#007bff',
                        backgroundColor: 'rgba(0, 123, 255, 0.2)',
                        tension: 0.3,
                        fill: true
                    },
                    {
                        label: 'Utilisateurs',
                        data: usersData,
                        borderColor: '#28a745',
                        backgroundColor: 'rgba(40, 167, 69, 0.2)',
                        tension: 0.3,
                        fill: true
                    },
                    {
                        label: 'T√¢ches',
                        data: tasksData,
                        borderColor: '#ffc107',
                        backgroundColor: 'rgba(255, 193, 7, 0.2)',
                        tension: 0.3,
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>

{% endblock %}