{% extends 'base.html.twig' %}

{% block title %}Administration - TaskFlow{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- En-tête administrateur -->
    <div class="admin-header">
        <div class="admin-header-content">
            <div class="admin-header-icon">
                <i class="fas fa-cogs"></i>
            </div>
            <h1 class="admin-header-title">Administration TaskFlow</h1>
            <p class="admin-header-subtitle">Tableau de bord administrateur</p>
        </div>
    </div>

    <!-- Cartes statistiques -->
    <div class="admin-stats-grid">
        <div class="admin-stat-card stat-card-primary">
            <div class="admin-stat-content">
                <div class="admin-stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h5 class="admin-stat-title">Utilisateurs</h5>
                <h2 class="admin-stat-value">{{ total_users }}</h2>
            </div>
            <div class="admin-stat-footer">
                <a href="{{ path('admin_users') }}">
                    Voir les utilisateurs <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>

        <div class="admin-stat-card stat-card-success">
            <div class="admin-stat-content">
                <div class="admin-stat-icon">
                    <i class="fas fa-project-diagram"></i>
                </div>
                <h5 class="admin-stat-title">Projets</h5>
                <h2 class="admin-stat-value">{{ total_projects }}</h2>
            </div>
            <div class="admin-stat-footer">
                <a href="{{ path('admin_projects') }}">
                    Voir les projets <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>

        <div class="admin-stat-card stat-card-warning">
            <div class="admin-stat-content">
                <div class="admin-stat-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <h5 class="admin-stat-title">Tâches</h5>
                <h2 class="admin-stat-value">{{ total_tasks }}</h2>
            </div>
            <div class="admin-stat-footer">
                <a href="{{ path('admin_tasks') }}">
                    Voir les tâches <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>

        <div class="admin-stat-card stat-card-info">
            <div class="admin-stat-content">
                <div class="admin-stat-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h5 class="admin-stat-title">Tâches terminées</h5>
                <h2 class="admin-stat-value">{{ completed_tasks_count }}</h2>
            </div>
            <div class="admin-stat-footer">
                <a href="{{ path('admin_tasks') }}">
                    Voir les tâches terminées <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Graphique d'activité -->
        <div class="col-lg-6 mb-4">
            <div class="admin-chart-container">
                <div class="admin-chart-header">
                    <h5 class="admin-chart-title">Activité des 30 derniers jours</h5>
                </div>
                <div class="admin-chart-canvas">
                    <canvas id="monthlyActivityChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Utilisateurs actifs -->
        <div class="col-lg-6 mb-4">
            <div class="admin-active-users">
                <div class="admin-active-users-header">
                    <h5 class="admin-chart-title">Utilisateurs les plus actifs</h5>
                </div>
                {% if most_active_users is empty %}
                    <div class="admin-empty-state">
                        <i class="fas fa-users"></i>
                        <p>Aucun utilisateur actif à afficher.</p>
                    </div>
                {% else %}
                    {% for activeUser in most_active_users %}
                        <div class="admin-active-user-row">
                            <div class="d-flex align-items-center">
                                <div class="admin-user-avatar">
                                    {{ activeUser[0].firstName|first }}{{ activeUser[0].lastName|first }}
                                </div>
                                <div class="admin-user-info">
                                    <div class="admin-user-name">
                                        <a href="{{ path('admin_user_show', {id: activeUser[0].id}) }}" class="text-decoration-none">
                                            {{ activeUser[0].fullName }}
                                        </a>
                                    </div>
                                    <div class="admin-user-email">{{ activeUser[0].email }}</div>
                                </div>
                                <div class="admin-user-stats">
                                    <div class="admin-user-stat">
                                        <span class="admin-user-stat-value">{{ activeUser.projectCount }}</span>
                                        <small class="admin-user-stat-label">Projets</small>
                                    </div>
                                    <div class="admin-user-stat">
                                        <span class="admin-user-stat-value">{{ activeUser.taskCount }}</span>
                                        <small class="admin-user-stat-label">Tâches</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
    
    <!-- Projets récents -->
    <div class="row">
        <div class="col-12">
            <div class="admin-recent-projects">
                <div class="admin-chart-header">
                    <h5 class="admin-chart-title">Projets les plus récents</h5>
                </div>
                {% if recent_projects is empty %}
                    <div class="admin-empty-state">
                        <i class="fas fa-project-diagram"></i>
                        <p>Aucun projet récent à afficher.</p>
                    </div>
                {% else %}
                    <div class="admin-projects-grid">
                        {% for project in recent_projects %}
                            <div class="admin-project-card">
                                <h5 class="admin-project-title">
                                    <a href="{{ path('project_show', {id: project.id}) }}">{{ project.title }}</a>
                                </h5>
                                <h6 class="admin-project-owner">
                                    Par : <a href="{{ path('admin_user_show', {id: project.owner.id}) }}">{{ project.owner.fullName }}</a>
                                </h6>
                                <p class="admin-project-description">{{ project.description }}</p>
                                <div class="admin-project-footer">
                                    <small class="admin-project-date">
                                        <i class="far fa-calendar me-1"></i>Créé le {{ project.createdAt|date('d/m/Y') }}
                                    </small>
                                    <span class="admin-project-tasks">{{ project.tasks|length }} tâches</span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const labels = {{ monthly_activity.labels|json_encode()|raw }};
            const projectsData = {{ monthly_activity.projects|json_encode()|raw }};
            const usersData = {{ monthly_activity.users|json_encode()|raw }};
            const tasksData = {{ monthly_activity.tasks|json_encode()|raw }};

            const ctx = document.getElementById('monthlyActivityChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Projets',
                            data: projectsData,
                            borderColor: '#007bff',
                            backgroundColor: 'rgba(0, 123, 255, 0.2)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'Utilisateurs',
                            data: usersData,
                            borderColor: '#28a745',
                            backgroundColor: 'rgba(40, 167, 69, 0.2)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'Tâches',
                            data: tasksData,
                            borderColor: '#ffc107',
                            backgroundColor: 'rgba(255, 193, 7, 0.2)',
                            tension: 0.3,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}