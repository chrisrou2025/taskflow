{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil - TaskFlow{% endblock %}

{% block body %}
	<div class="container profile-edit-page">
		<div class="row justify-content-center">
			<div class="col-md-8 col-lg-6">
				<div class="card border-0 shadow-sm">
					<div class="card-header bg-warning text-dark">
						<h4 class="card-title mb-0">
							<i class="fas fa-user-edit me-2"></i>Modifier mes informations
						</h4>
					</div>
					<div class="card-body p-4">
						<div class="text-center mb-4">
							<div class="bg-warning bg-opacity-10 rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
								<span class="text-warning fw-bold h4 mb-0">{{ user.firstName|first }}{{ user.lastName|first }}</span>
							</div>
							<p class="text-muted">Modifiez vos informations personnelles</p>
						</div>

						{{ form_start(form, {'attr': {'class': 'form-container form-profile needs-validation', 'novalidate': true}}) }}

						<div class="mb-3">
							{{ form_label(form.firstName, null, {'label_attr': {'class': 'form-label fw-semibold required-field'}}) }}
							<div class="auth-input-group input-group">
								<span class="input-group-text bg-light">
									<i class="fas fa-user text-warning"></i>
								</span>
								{{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
							</div>
							<div class="form-errors">
								{{ form_errors(form.firstName) }}
							</div>
						</div>

						<div class="mb-3">
							{{ form_label(form.lastName, null, {'label_attr': {'class': 'form-label fw-semibold required-field'}}) }}
							<div class="auth-input-group input-group">
								<span class="input-group-text bg-light">
									<i class="fas fa-user-tag text-warning"></i>
								</span>
								{{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
							</div>
							<div class="form-errors">
								{{ form_errors(form.lastName) }}
							</div>
						</div>

						<div class="mb-4">
							{{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-semibold required-field'}}) }}
							<div class="auth-input-group input-group">
								<span class="input-group-text bg-light">
									<i class="fas fa-envelope text-warning"></i>
								</span>
								{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
							</div>
							<div class="form-errors">
								{{ form_errors(form.email) }}
							</div>
							<div class="form-text">
								<i class="fas fa-info-circle me-1"></i>
								Cette adresse email servira pour vous connecter
							</div>
						</div>

						<div class="form-actions">
							<div class="d-flex justify-content-between align-items-center">
								<a href="{{ path('user_profile') }}" class="btn btn-outline-secondary btn-form">
									<i class="fas fa-times me-2"></i>Annuler
								</a>
								<button type="submit" class="btn btn-warning btn-lg text-dark auth-btn">
									<i class="fas fa-save me-2"></i>Enregistrer les modifications
								</button>
							</div>
						</div>

						{{ form_end(form) }}
					</div>
				</div>

				<!-- Informations de sécurité -->
				<div class="card border-0 bg-light mt-4">
					<div class="card-body">
						<h6 class="card-title">
							<i class="fas fa-info-circle me-2 text-primary"></i>Informations importantes
						</h6>
						<ul class="mb-0 small text-muted">
							<li>La modification de votre email nécessitera une nouvelle connexion</li>
							<li>Vos collaborateurs verront votre nom mis à jour dans les projets partagés</li>
							<li>Ces informations sont utilisées uniquement dans le cadre de TaskFlow</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}