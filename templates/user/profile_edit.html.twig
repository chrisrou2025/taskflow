{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil - TaskFlow
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8 col-lg-6">
				<div class="card border-0 shadow-sm">
					<div class="card-header bg-warning text-dark">
						<h4 class="card-title mb-0">
							<i class="fas fa-user-edit me-2"></i>Modifier mes informations
						</h4>
					</div>
					<div class="card-body p-4">
						<div class="text-center mb-4">
							<div class="bg-warning bg-opacity-10 rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
								<span class="text-warning fw-bold h4 mb-0">{{ user.firstName|first }}{{ user.lastName|first }}</span>
							</div>
							<p class="text-muted">Modifiez vos informations personnelles</p>
						</div>

						{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

						<div class="mb-3">
							{{ form_label(form.firstName, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
							<div class="input-group">
								<span class="input-group-text bg-light">
									<i class="fas fa-user text-warning"></i>
								</span>
								{{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
							</div>
							{{ form_errors(form.firstName) }}
						</div>

						<div class="mb-3">
							{{ form_label(form.lastName,
								null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
							<div class="input-group">
								<span class="input-group-text bg-light">
									<i class="fas fa-user-tag text-warning"></i>
								</span>
								{{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
							</div>
							{{ form_errors(form.lastName) }}
						</div>

						<div class="mb-4">
							{{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
							<div class="input-group">
								<span class="input-group-text bg-light">
									<i class="fas fa-envelope text-warning"></i>
								</span>
								{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
							</div>
							{{ form_errors(form.email) }}
							<div class="form-text">
								<i class="fas fa-info-circle"></i>
								Cette adresse email servira pour vous connecter
							</div>
						</div>

						<div class="d-flex justify-content-between align-items-center">
							<div class="d-flex gap-2">
								<a href="{{ path('user_profile') }}" class="btn btn-outline-secondary">
									<i class="fas fa-times me-2"></i>Annuler
								</a>
							</div>
							<button type="submit" class="btn btn-warning btn-lg text-dark">
								<i class="fas fa-save me-2"></i>Enregistrer les modifications
							</button>
						</div>

						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	<style>
		.input-group-text {
			border-right: none;
			background-color: #f8f9fa !important;
		}

		.input-group .form-control {
			border-left: none;
		}

		.input-group .form-control:focus {
			border-color: #86b7fe;
			box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
		}

		.form-errors {
			color: var(--danger-color);
			font-size: 0.875rem;
			margin-top: 0.25rem;
		}

		.progress {
			border-radius: 10px;
		}

		.progress-bar {
			border-radius: 10px;
		}
	</style>
{% endblock %}
